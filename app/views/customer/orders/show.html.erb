<div class="container">
  <div class="row">
    <div class="col-12">
      <div id="success-message"></div>
      <h2 class="mt-5">注文履歴詳細</h2>
      <div class="container mt-5">
        <div class="row">
          <div class="col-6">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <th>注文日</th>
                  <td><%= @order.created_at %></td>
                </tr>
                <tr>
                  <th>配送先</th>
                  <td><%= @order.post_code %>&nbsp;&nbsp;<%= @order.address %>&nbsp;&nbsp;<%= @order.name %></td>
                </tr>
                <tr>
                  <th>支払方法</th>
                  <td><%= @order.payment_method == 0 ? "銀行振込" : "クレジットカード" %></td>
                </tr>
                <tr>
                  <th>注文ステータス</th>
                  <td>
                    <%= @order.display_order_status %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="col-5">
        <table class="table table-bordered">
          <h5>請求情報</h5>
          <tr>
            <th class="tablehead">商品合計</th>
            <td><%= @order.total_billing.to_s(:delimited) %>円</td>
          </tr>


          <tr>
            <th class="tablehead">配送料</th>
            <td><%= @order.shipping.to_s(:delimited) %>円</td>
          </tr>

          <tr>
            <th class="tablehead">ご請求額</th>
            <td><%= @order.total_billing_included_shipping.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>





    <div class="container mt-5">
      <div class="row">
        <div class="col-8">
          <!-- 注文商品一覧 -->
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">商品名</th>
                <th scope="col">単価（税込）</th>
                <th scope="col">数量</th>
                <th scope="col">小計</th>
              </tr>
            </thead>
            <tbody>
              <% @order_products.each do |order_product| %>
              <tr>
                <td><%= order_product.product.name %></td>
                <td><%= order_product.price %></td>
                <td><%= order_product.product_quantity %></td>
                <td><%= order_product.subtotal %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>