<div class='container'>
  <div class='row mt-3'>
    <div class="col offset-1">
      <h5>ジャンル編集</h5>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genre_path(@genre.id), remote: false do |f| %>
    <div class='row mt-3'>
      <div class="col-1">
        <%= f.label :name, "ジャンル", {style: "display: inline-block;"} %>
      </div>
      <div class="col-3">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-5">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効", {value: true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "無効", {value: false, style: "display: inline-block;"} %>
        <%= f.submit "変更を保存する", class: "btn btn-primary ml-2" %>
      </div>
    </div>
  <% end %>
</div>