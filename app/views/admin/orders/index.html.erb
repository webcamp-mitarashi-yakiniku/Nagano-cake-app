<div class="container p-5">
  <div class="row">
    <div class="col-12 mx-auto">
      <h3 class="a-orders-title text-center">注文履歴一覧</h3>
      <div>
        <table class="table mt-5">
          <thead>
            <tr>
              <th scope="col" class="w-25">購入日時</th>
              <th scope="col" class="w-25">購入者</th>
              <th scope="col" class="w-25">注文個数</th>
              <th scope="col" class="w-25">注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to "#{order.created_at.strftime('%Y/%m/%d %H:%M:%S')}", admin_order_path(order.id) %></td>
                <td><%= order.customer.family_name + order.customer.first_name %></td>
                <td><%= order.amount %></td>
                <td><%= order.display_order_status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="col-lg-12 mx-auto">
          <div class="d-flex align-items-center justify-content-center">
            <%= paginate @orders %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>