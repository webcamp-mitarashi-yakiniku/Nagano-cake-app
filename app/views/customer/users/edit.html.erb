<div class="container">
  <div class="row">
    <div class="col-8">
      <h2 class="mt-5">登録情報編集</h2>
      <!-- TODO: 編集エラー時の処理 -->
      <% if @customer.errors.present? %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @customer, url: users_path, local: true do |f| %>
        <table class="mt-5">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>名前</td>
              <td><label for="family_name__input">（姓）</label></td>
              <td><%= f.text_field :family_name, autofocus: true, id: "family_name__input", class: "form-control" %></td>
              <td><label for="first_name__input">（名）</label></td>
              <td><%= f.text_field :first_name, autofocus: true, id: "first_name__input", class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><label for="family_name_kana__input">（セイ）</label></td>
              <td><%= f.text_field :family_name_kana, autofocus: true, id: "family_name_kana__input", class: "form-control" %></td>
              <td><label for="first_name_kana__input">（メイ）</label></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, id: "first_name_kana__input", class: "form-control" %></td>
            </tr>
            <tr>
              <td><label for="mail_address__input">メールアドレス</label></td>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, id: "mail_address__input", class: "form-control" %></td>
            </tr>
            <tr>
              <td><label for="post_code__input">郵便番号（ハイフンなし）</label></td>
              <td></td>
              <td><%= f.text_field :post_code, autofocus: true, id: "post_code__input", class: "form-control" %></td>
            </tr>
            <tr>
              <td><label for="address__input">住所</label></td>
              <td></td>
              <td colspan="3"><%= f.text_field :address, autofocus: true, id: "address__input", class: "form-control" %></td>
            </tr>
            <tr>
              <td><label for="phone_number__input">電話番号（ハイフンなし）</label></td>
              <td></td>
              <td colspan="3"><%= f.text_field :phone_number, autofocus: true, id: "phone_number__input", class: "form-control" %></td>
            </tr>
          </tbody>
        </table>
        <div class="container mt-5">
          <div class="row justify-content-center">
            <div class="col-5">
              <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
              <%= link_to '退会する', exit_users_path, method: :patch, class: "btn btn-danger", data: { confirm: '本当に退会しますか？' } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>