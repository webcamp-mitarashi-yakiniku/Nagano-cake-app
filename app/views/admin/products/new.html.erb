<div class="container">
  <h4 class="mt-3">商品新規登録</h4>
  <div class="container">
    <div class="row d-flex">
      <div class="col">
        <% if @product.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <%= form_with model: @product, url: admin_products_path, local:true do |f| %>
      <div class="row">
        <div class="col-5">
            <%= attachment_image_tag @product, :image, size: "300x200", fallback: "sample_cake2.jpg" %>
            <%= f.attachment_field :image, placeholder: "商品画像" %>
        </div>
        <div class="col-6">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><label>商品名</label></td>
                <td><%= f.text_field :name, autofocus: true %></td>
              </tr>
              <tr>
                <td><label>商品説明</label></td>
                <td><%= f.text_area :introduction, autofocus: true %></td>
              </tr>
              <tr>
                <td><label>ジャンル</label></td>
                <td><%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, include_blank: "--選択してください--" %></td>
              </tr>
              <tr>
                <td><label>税抜き価格</label></td>
                <td><%= f.text_field :price, autofocus: true %></td>
              </tr>
              <tr>
                <td><label>販売ステータス</label></td>
                <td><%= f.select :on_sale_status, [["販売中", TRUE],["売り切れ", FALSE]], include_blank: "--選択してください--" %></td>
              </tr>
              <tr>
                <td><label></label></td>
                <td><%= f.submit '新規登録',class: "btn btn-primary"%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>