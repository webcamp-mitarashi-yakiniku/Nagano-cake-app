<div class="container index-container">

<h3 class="order-title">注文履歴一覧</h3>

<table class="table table-bordered">
  <tr class="tablehead">
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>

  <% @orders.each do |order| %>
    <tr>
        <td><%= l order.created_at, format: :short %></td>
        <td>
            <%= order.post_code %><br>
            <%= order.address %><br>
            <%= order.name %>
        </td>
        <td>
          <% order.order_products.each do |ord| %>
            <%= Product.where(id: ord.product_id).pluck(:name).join %><br>
          <% end %>
        </td>
        <td><%= order.shipping.to_s(:delimited) %>円</td>
        <td><%= order.display_order_status %></td>
        <td><%= link_to '表示する', order_path(order.id) ,class: "btn order-btn"%></td>
      </tr>
  <% end %>
  </table>
</div>