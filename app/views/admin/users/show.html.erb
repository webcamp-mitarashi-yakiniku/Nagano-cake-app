<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mt-5"><%= @customer.full_name %>さんの会員詳細</h2>
      <div class="mt-5">
        <table class="table mt-5">
          <tbody>
            <tr>
              <th class="a-users-th">顧客ID</th>
              <td class="a-users-td"><%= @customer.id %>
                <% if @customer.is_active %>
                  <span class="badge badge-primary">有効会員<span>
                <% else %>
                  <span class="badge badge-secondary">無効会員<span>
                <% end %>
              </td>
            </tr>
            <tr>
              <th class="a-users-th">氏名</th>
              <td class="a-users-td"><%= @customer.family_name %>&nbsp;&nbsp;<%= @customer.first_name %></td>
            </tr>
            <tr>
              <th class="a-users-th">フリガナ</th>
              <td class="a-users-td"><%= @customer.family_name_kana %>&nbsp;&nbsp;<%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th class="a-users-th">郵便番号</th>
              <td class="a-users-td"><%= @customer.post_code %></td>
            </tr>
            <tr>
              <th class="a-users-th">住所</th>
              <td class="a-users-td"><%= @customer.address %></td>
            </tr>
            <tr>
              <th class="a-users-th">電話番号</th>
              <td class="a-users-td"><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <th class="a-users-th">メールアドレス</th>
              <td class="a-users-td"><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
        <div class="container mt-3">
          <div class="row">
            <div class="text-center col">
              <%= link_to "編集する", edit_admin_user_path(@customer.id), class: "a-users-button" %>
              <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "a-users-button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>