<div class="favorite">
  <div class="favorite-title">
    <span class="favorite-title-inner">おすすめ商品</span>
  </div>
  <div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="favorite-item">
            <%= link_to product_path(product) do %>
              <%= attachment_image_tag product, :image, format: 'jpeg', class: "img-fluid" %>
            <% end %>
            <div class="favorite-item-name">
              <span class="favorite-item-name-text"><%= product.name %></span>
            </div>
            <div class="favorite-item-price">
              <span class="favorite-item-price-text"><%= product.price.to_s(:delimited) %>円</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="favorite-continue-btn-wrapper">
    <%= link_to "続きをみる", products_path, class: "favorite-continue-btn" %>
  </div>
</div>