<div class="container">
  <div class="row">
    <div class="col-9">
      <h2 class="mt-5">注文履歴一覧</h2>
      <div class="mt-5">
        <table class="table mt-5">
          <thead>
            <tr>
              <th scope="col" class="w-25">購入日時</th>
              <th scope="col" class="w-25">購入者</th>
              <th scope="col" class="w-25">注文個数</th>
              <th scope="col" class="w-25">注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to "#{order.created_at.strftime('%Y/%m/%d %H:%M:%S')}", admin_order_path(order.id) %></td>
                <td><%= order.customer.family_name + order.customer.first_name %></td>
                <td><%= order.amount %></td>
                <td><%= order.display_work_status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>