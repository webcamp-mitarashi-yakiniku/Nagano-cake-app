<header>
  <nav class="navbar navbar-expand-lg header-navigation-container fixed-top">
    <a href="/"><%= image_tag 'header_logo.png', size: '130x45', class: "navbar-brand" %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon">
    </button>
    <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
      <ul class="navbar-nav nav-list">
        <% if admin_signed_in? %>
          <li class="nav-item nav-list-item"><%= link_to'商品一覧', admin_products_path %></li>
          <li class="nav-item nav-list-item"><%= link_to"会員一覧", admin_users_path %></li>
          <li class="nav-item nav-list-item"><%= link_to"注文履歴一覧", admin_orders_path %></li>
          <li class="nav-item nav-list-item"><%= link_to"ジャンル一覧", admin_genres_path, method: :delete %></li>
          <li class="nav-item nav-list-item"><%= link_to"ログアウト", destroy_admin_session_path, method: :delete %></li>
          <li>
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= select_tag(:option, options_for_select([["商品名", "1"],["会員氏名","2"]]))%>
              <%= f.text_field :search, placeholder: "空検索で全件表示" %>
              <%= f.submit :"検索" %>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item nav-list-item is-active"><%= link_to'About', about_path %></li>
          <li class="nav-item nav-list-item"><%= link_to"商品一覧", admin_products_path %></li>
          <li class="nav-item nav-list-item"><%= link_to"新規登録", new_customer_registration_path %></li>
          <li class="nav-item nav-list-item"><%= link_to"ログイン", new_customer_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>