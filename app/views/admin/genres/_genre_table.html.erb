<%# ジャンル追加フォーム %>
<%= form_with model: new_genre, url: admin_genres_path, method: :post, remote: true do |f| %>
  <div class='row mt-3'>
    <div class="col-1">
      <%= f.label :name, "ジャンル", {style: "display: inline-block;"} %>
    </div>
    <div class="col-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-5">
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "有効", {value: true, style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "無効", {value: false, style: "display: inline-block;"} %>
      <%= f.submit "追加", class: "btn btn-primary ml-2" %>
    </div>
  </div>
<% end %>

<%# ジャンル一覧テーブル %>
<div class='row mt-3'>
  <div class="col-6">
    <table class='table table-bordered border-primary'>
      <thead>
        <tr>
          <th class='table-secondary'>ジャンル</th>
          <th class='table-secondary'>状態</th>
          <th class='table-secondary'></th>
        </tr>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.is_active_JP %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) , class: 'btn btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>