



<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div>
    <h4>管理者ログイン<h4>
  </div>
  <table>
    <tr>
      <td><label for="mail_address__input">メールアドレス</label></td>
      <td><%= f.email_field :email, autofocus: true, id: "mail_address__input", class: "form-control" %></td>
    </tr>
    <tr>
      <td><label for="password__input">パスワード</label></td>
      <td><%= f.password_field :password, autofocus: true, id: "password__input", class: "form-control" %></td>
    </tr>
  </table>
  <div>
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
